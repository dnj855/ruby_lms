<div class="flex flex-col w-full pb-6 mx-auto lg:flow-row">
  <div class="w-full mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>
    <% if @course.lessons.any? && @course.lessons.first.video.present? %>
      <%= video_tag @course.lessons.first.video, controls: true, class: "w-full rounded mb-6" %>
    <% end %>
    <div class="p-6 border rounded">
      <div class="flex flex-wrap items-center justify-start w-full mb-2">
        <%# 14'08 dans le cours "Course preview" %>
      </div>
    </div>
    <%= link_to "Back to courses", courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
    </div>
  </div>
</div>
